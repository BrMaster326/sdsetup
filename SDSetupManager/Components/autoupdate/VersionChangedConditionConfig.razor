@using SDSetupCommon.Data.UpdaterModels
@inherits ComponentBase

@if (Globals.Authenticated) {
    <BSCard CardType="CardType.Card">
        <a href="javascript:void(0);" @onclick="@ToggleCollapse">
            <BSCard CardType="CardType.Header">
                Version Changed Condition
            </BSCard>
        </a>
        <BSCard CardType="CardType.Body" Class="@(collapsed ? "collapse" : "")">
            <BSCard CardType="CardType.Text">
                This condition will check if the version generated by the version source configuration is different from the current version.
            </BSCard>
        </BSCard>
    </BSCard>
}

@code {
    [Parameter]
    public VersionChangedCondition Condition { get; set; }

    private bool collapsed = true;

    private void ToggleCollapse() {
        collapsed = !collapsed;
    }
}